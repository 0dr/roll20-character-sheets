div[class^="spoke"] {
  height: 44px;
  width: 2px;
  position: absolute;
  display: none;
  left: 0;
  top: 0;
  background: black;
}

.spoke-0 {
  transform: translateX(21px);
}

.spoke-60 {
  transform: translateX(21px) rotate(60deg);
}

.spoke-90 {
  transform: translateX(21px) rotate(90deg);
}

.spoke-120 {
  transform: translateX(21px) rotate(120deg);
}


.harm-section
  display: inline-block;
  text-align: center;

.clock
  width: 5em;
  height: 5em;
  display: inline-block;
  border-radius: 50%;
  background: black;
  border: 2px solid black;

.total-segment-4
  &.harm-checkbox.harm-0:checked ~ .clock
    background: white;
  &.harm-checkbox.harm-1:checked ~ .clock
    background-image: linear-gradient(180deg, transparent 50%, white 50%), linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-2:checked ~ .clock
    background-image: linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-3:checked ~ .clock
    background-image: linear-gradient(180deg, transparent 50%, black 50%), linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-4:checked ~ .clock
    background-color: black;

.total-segment-6
  &.harm-checkbox.harm-0:checked ~ .clock
    background: white;
  &.harm-checkbox.harm-1:checked ~ .clock
    background-image: linear-gradient(150deg, transparent 50%, white 50%), linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-2:checked ~ .clock
    background-image: linear-gradient(210deg, transparent 50%, white 50%), linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-3:checked ~ .clock
    background-image: linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-4:checked ~ .clock
    background-image: linear-gradient(150deg, transparent 50%, black 50%), linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-5:checked ~ .clock
    background-image: linear-gradient(210deg, transparent 50%, black 50%), linear-gradient(90deg, white 50%, transparent 50%);
  &.harm-checkbox.harm-6:checked ~ .clock
    background-color: black;

