@import './mode-template.styl';

backgroundColor = #1f1f1f
textColor = #c0c0c0

.sheet-darkmode
  .sheetform
    background-color backgroundColor

  background backgroundColor
  color textColor
  h1, h2, h3, h4, h5, h6, p, li, td, span, textarea
    color @color

  label.surface,
  .static-btn,
  .toggle-btn,
  .page-label
    &:hover
      background #3d3d3d
      transition 0.5s ease
  .surface
    background #323232
    border 0
    &.roll-label
      border @border
    color @color
    box-shadow 2px 2px 3px 1px #141414
    span, h3, label
      color @color
    .progress-input-holder input[min], 
    .large-progress-input-holder input[min],
    input[min] + span, 
    input[min].large-input + span
      background @background
    label.surface,
    .static-btn,
    .toggle-btn,
    .page-label
      &:hover
        background #464646
        transition 0.5s ease
  .btn-input
    &:checked
      & ~ .btn-content
        background textColor
        color backgroundColor
  
  label.surface-2
    &:hover
      background #5f5f5f
  .surface-2
    background #4c4c4c
    border 0
    color @color
    box-shadow 2px 2px 3px 1px backgroundColor
    span
      color #e8e8e8
    .static-btn,
    .toggle-btn,
    .page-label
      &:hover
        background #5f5f5f
        transition 0.5s ease
  .stat-set
    margin-left 5.8em

  .write-in-container,
  .ship .info
    input
      background none
      color @color

  .oracle-row:nth-child(2n+1),
  .oracle:nth-child(2n+1)
    background-color: #2c2c2c;

  button[type="roll"].roll-show
    color #acacad
  
  input[type=text]
    font-weight: 600;
    &:focus
      input-highlight(0px)

  input
    &.vow-name,
    &.progress-name
      color @color

  .difficulty
    input
      &:checked
        & ~ h5
          background textColor
          color backgroundColor
    h5
      border-radius 0.3em

  .challenge-show
    &:hover
      background #3d3d3d
      transition 0.5s ease
  
  .progress-input
    &:hover
      background #3d3d3d
      transition 0.3s ease
  .list-group-container
    color @color
    ul
      li.list-group-item
        & > *
          background-color #323232
        &:nth-child(2n+1) > *
          background-color #272727
    .selected-move
      z-index 3
      &:checked
        & ~ .move-name,
        & ~ label.toggle-btn
          background textColor !important
          color backgroundColor !important

    label.toggle-btn
      &:hover
        background-color #3d3d3d !important
  
  .roll-resource-label,
  input[type=checkbox].momentum-burn:hover ~ div.momentum-burn-back,
  .momentum-box-input:hover ~ .momentum-box-back
    &:hover
      background #3d3d3d
      transition 0.5s ease
  label
    &.stat-toggle
      &:hover
        background #3d3d3d
        transition 0.5s ease

  progress(textColor, backgroundColor)