@import './mode-template.styl';

backgroundColor = #1f1f1f
textColor = #c0c0c0

.sheet-darkmode
  .sheetform
    background-color backgroundColor

  background backgroundColor
  color textColor
  h1, h2, h3, h4, h5, h6, p
    color @color
  .primary
    color #4C4D4F
    background #F2632B

  label.surface,
  .static-btn,
  .toggle-btn,
  .page-label
    &:hover
      background #3d3d3d
      transition 0.5s ease
  .surface
    background #323232
    border 0
    color @color
    box-shadow 2px 2px 3px 1px #141414
    span, h3, label
      color @color
    .progress-input-holder input[min], 
    .large-progress-input-holder input[min],
    input[min] + span, 
    input[min].large-input + span
      background @background
    label.surface,
    .static-btn,
    .toggle-btn,
    .page-label
      &:hover
        background #464646
        transition 0.5s ease
  .btn-input
    &:checked
      & ~ .btn-content
        background textColor
        color backgroundColor
  
  label.surface-2
    &:hover
      background #5f5f5f
  .surface-2
    background #4c4c4c
    border 0
    color @color
    box-shadow 2px 2px 3px 1px backgroundColor
    span
      color #e8e8e8
    .static-btn,
    .toggle-btn,
    .page-label
      &:hover
        background #5f5f5f
        transition 0.5s ease
  .stat-set
    margin-left 5.8em

  .write-in-container,
  .ship .info
    input
      background none
      color @color

  .oracle-row:nth-child(2n+1),
  .oracle:nth-child(2n+1)
    background-color: #2c2c2c;

  button[type="roll"].roll-show
    color #acacad
  
  input[type=text]
    font-weight: 600;
    &:focus
      input-highlight(0px)
  
  progress(textColor, backgroundColor)