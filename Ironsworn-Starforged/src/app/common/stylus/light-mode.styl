@import './mode-template.styl';

backgroundColor = #fff
textColor = #4C4D4F

light-styles()
  color textColor
  h1, h2, h3, h4, h5, h6, p, span, label
    color @color
  .surface
    color @color
    borderCommon()
  label.surface,
  .static-btn,
  .toggle-btn,
  .page-label
    &:hover
      background #ccc
      transition 0.5s ease
  h3
    color #4C4D4F
  .stat-set
    margin-left 5em
  
  input[type=text]
    font-weight: 600;
    &:focus
      input-highlight(3px)
  
  .btn-input
    &:checked
      & ~ .btn-content
        background textColor
        color backgroundColor

  progress(textColor, backgroundColor)