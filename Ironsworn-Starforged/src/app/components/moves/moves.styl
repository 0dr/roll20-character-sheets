div
  &.search-bar
    display flex
    justify-content center
    width 100%
    margin 1em 0em 0.5em 0em
  &.preview-bar
    justify-content space-between
    width 100%
    display flex
    margin 0em 0em 0.5em 0em
  &.search-preview-bar
    display flex
    width auto
  &.move-nav-content
    padding 0.2em
    width 100%

input
  &.search-preview-bar
    width 17.6em
    borderCommon()
    border-radius 0
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px
  &.search-bar
    width 50%
    borderCommon()
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px
  &.table-btn
    &:checked
      & ~ div
        &.move-nav-content
          background #4c4d4f
          color #fff
          transition 0.5s ease

.preview-container
  display flex
  justify-content space-between
  font-size 1em
  flex-flow row
  font-weight normal
  height auto
  .move-scroll-list
    width 21.9em
    overflow auto
    borderCommon()
    padding 0
    height 50em

.move-container
  flex-wrap wrap
  flex-direction column
  justify-content space-between
  display flex
  font-size 1em
  font-weight normal
  align-content space-between
  height 50em
  .move-group
    border-radius 1.3em
  .move-group-title
    border-top-left-radius 1em
    border-top-right-radius 1em
  .move-list
    &:nth-last-child(1)
      border-bottom-right-radius: 1.4em
      border-bottom-left-radius: 1.4em
      .move-group-title
        border-top-left-radius 1em
        border-top-right-radius 1em
      label
        .move-name, div
          border-bottom-right-radius 0.9em
      .button-container
        border-bottom-left-radius 0.9em

  .move-scroll-list
    overflow auto
    borderCommon()
    padding 1em
    width max-content

.move
  margin 0em
  color #4c4d4f
  display flex
  padding 0

.move-group-title
  background #4c4d4f
  h3
    color #fff

.move-name
  width 100%
  borderCommon()

.move-highlight
  &:checked
    & ~ .move-name
      background #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px

.roll-show
  padding 0 !important
  font-size 20px !important
  margin 0 !important
  height auto
  &:hover
    color white

.move-list
  padding 0
  display flex
  label
    cursor pointer
  div
    font-weight 600
    font-size 14px
    text-align center
    margin 0 0 0px
    padding 0.1em
    text-transform none
    &:hover
      transition 0.3s ease
      background #606060 !important
      color #fff
  &:nth-child(2n
    & + 1)
      background-color #ddd

.move-column
  display flex
  flex-direction column
  margin-right 10px

span
  &.move-result
    width 36em
  &.preview-move-roll
    width 60%
    margin-left 1em

.move-group
  borderCommon()
  box-sizing border-box
  width 30%
  margin 0.3em 0em
  height fit-content
  height -moz-fit-content

.move-group-scroll
  borderCommon()
  box-sizing border-box
  height fit-content
  height -moz-fit-content

.move-box
  &:nth-child(n
    & + 2)
      margin-top 10px

.move-title
  background-color #4C4D4F
  color #fff
  border-bottom 1px solid #4C4D4F
  font-size 1.4em
  font-weight bold
  padding 0.2em 0.5em 0.1em 0.7em
  text-transform uppercase
  width 11.7em
  border-top-left-radius 1em
  border-top-right-radius 1em

.move-preview
  width auto

.move-page-footer
  text-align right !important
  padding-right 1em

.move-preview-container
  width 62%
  p
    font-size 15px
    margin 0
  ul
    margin 2px 0px 5px 25px
    font-size 15px
  li
    font-size 15px
    std-font('Encode Sans Condensed')
  .roll-label
    border-radius 0

.move-show
  display inline-flex
  font-size 1em
  margin 0em
  padding 0.3em
  &:hover
    background #969696
    cursor pointer
    transition 0.5s ease

.column-wrap
  flex-flow column wrap
  width 22.5em

.move-delve-table
  width auto !important

.move-description
  std-font('Encode Sans')
  padding 1em
  borderCommon()
  .move-oracle-container
    div
      &:nth-child(1)
        .roll-label
          border-top-width 4px
  label
    font-size 1em
    border 0px solid #4c4d4f
    border-right-width 4px
    border-left-width 4px
  p
    margin-bottom 0.3em
  table
    borderCommon()
    width 99.5%
    margin 0.8em 0em
    thead
      padding 0.3em
      background-color: #4c4d4f
      color #fff
      th
        padding-left 0.4em
    tbody
      td
        padding-left 0.4em


.move-table
  border none
  width 30.5em
  font-size 12px

.move-roll
  width 18%

.move-footer
  background-color #434b4d
  color #fff
  line-height 0.9em
  font-size 0.9em
  std-font('Encode Sans')
  font-variant small-caps
  font-weight bold
  text-align left
  padding 0.5rem

.close-preview
  text-transform uppercase
  width 100%
  height auto
  margin 0
  font-weight bold
  font-size 14px
  padding 0.2em 0.2em 0.2em 0.2em
  border 2px solid #494a4c
  cursor pointer
  text-align center
  &:hover
    background-color #ccc
    color #4c4d4f
    transition 0.5s ease

.clear-search
  width fit-content
  width -moz-fit-content
  height auto
  margin 0
  font-weight bold
  font-size 14px
  padding 0.2em 0.2em 0.2em 0.2em
  border 2px solid #494a4c
  cursor pointer
  &:hover
    background-color #ccc
    color #4c4d4f
    transition 0.5s ease

.selected-move
  z-index 3
  &:checked
    & ~ .move-name
      background #434b4d !important
      color #fff !important

