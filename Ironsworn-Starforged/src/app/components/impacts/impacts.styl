.impact-list
  display flex
  flex-flow row wrap
  justify-content space-evenly

.impact-component
  margin-top 1em
  display flex
  flex-flow wrap

.impact-btn
  width 90%

.severity-track
  display flex
  margin-top 1em

.track-child
  width 100%
  .btn-content
    padding 0.4em 0.2em 0.2em 0.2em
    align-self center

ul.impact-body-list
  margin 0em 0.2em 0.3em 1.3em

p.severity-reduce,
p.impact-clear
  margin-bottom 0.3em

.impact-group
  width 25%

.impact-group-title
  text-align center
  text-transform: uppercase
  font-size 14px
  font-weight bold
  margin-bottom 0.3em
