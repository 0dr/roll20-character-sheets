fieldset.repeating_mount
	.core-box.stats
		.grid.grid-flow-col
			each val in ["name", "type"]
				+text-input(`mount_${val}`, val.toUpperCase())
		.grid.grid-flow-col
			each val in ["ac", "hp", "morale", "spd"]
				if val == "hp"
					+text-input-duo(`mount_${val}`, val.toUpperCase(), `mount_${val}_max`, "0").center
				else
					+text-input(`mount_${val}`, val.toUpperCase())(type="number", value="0").center
		.grid.grid-flow-col  
			each val in ["attack", "carrying_capacity"]
				+text-input(`mount_${val}`, val.toUpperCase())
		.grid.mt
			+sectionheader("show_gear", "GEAR")
			div
				textarea(name=`attr_mount_gear`)
