.treasure-record.grid 
  .grid.2column
    .col
      .row
        img(alt='King Arthur Pendragon' src='https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Pendragon5thEdition/src/pendragonlogo.jpg')
      .row.header
        h1.header(data-i18n='treasure record')
    .col
      each val in ['knight name', 'treasure location', 'security', 'other location', 'best clothing']
        .grid.2autocolumn
          h2(data-i18n=val)
          +textInput(`${val}`)
  .grid.sub-header.bottom-border
    each val in ['date', 'source/expense', 'form of treasure', 'amount/worth', 'total']
      h2.eclipse(data-i18n=val)
  .repeating-container
    fieldset(class=`repeating_treasure-record`)
      .grid
        each val in ['date', 'source expense', 'form of treasure', 'amount worth', 'total']
          .col
            +textInput(val)

.income-worksheet.grid
  .grid.2column
    .col
      .row
        img(alt='King Arthur Pendragon' src='https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Pendragon5thEdition/src/pendragonlogo.jpg')
    .col
      .row.header
        h1.header(data-i18n='manor income worksheet')
      .row.sub-header
        h2(data-i18n='for the complete landholding system')
  .grid.sub-header.bottom-border
    .col
      h2.eclipse(data-i18n='a.d.')
    each val in ['revenue', 'fortune', 'harvest', 'tally']
      .col
        h2.eclipse(data-i18n=val)
    
  .repeating-container
    fieldset(class=`repeating_income-worksheet`)
      .grid.grid-rows
        .col
          .row.text-center
            h3.eclipse(data-i18n='date')
          .row
            +textInput('date')
        .col.group
          .row.text-center
            h3.eclipse(data-i18n='anticipated income')
          .row.total.text-center
            span(name='attr_anticipated_income')
          each val in ['normal income', 'investment income']
            .grid.2autocolumn
              h3.eclipse(data-i18n=val)
              +textInput(val)
        .col.group
          .row.text-center
            h3.eclipse(data-i18n='misfortune')
          .row.total.text-center
            span(name='attr_misfortune')
          .grid.2autocolumn
            h3.eclipse(data-i18n='manorial luck')
            +textInput('manorial luck')
          .grid.4autocolumn
            each val in ['fate', 'core']
              h3.eclipse(data-i18n=val)
              +textInput(val)
        .col.group
          .row.text-center
            h3.eclipse(data-i18n='manor income')
          .row.total.text-center
            span(name='attr_manor_income')
          .grid
            .row
              h3.eclipse(data-i18n='harvest result')
            .row
              select(name="attr_harvest_result")
                each val, key in { 'incredible': 2.5, 'excellent': 2, 'good': 1.5, 'regular': 1, 'bad': 0.5, 'very bad': 0.25, 'negligible': 0.17}
                  option(data-i18n=key value=val)
        .col.group
          .row.text-center
            h3.eclipse(data-i18n='treasury')
          .row.total.text-center
            span(name='attr_treasury')
          each val in ['emergency income', 'expenses']
            .grid.2autocolumn
              h3.eclipse(data-i18n=val)
              +textInput(val)

.land-record
  .grid.headers
    .col
      .row
        img(alt='King Arthur Pendragon' src='https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Pendragon5thEdition/src/pendragonlogo.jpg')
      .row.header
        h1.header(data-i18n='land record')
    .col
      each val in ['manor name', 'held by', 'liege lord', 'location']
        .grid.2autocolumn
          h2(data-i18n=val)
          +textInput(`${val}`)
      .grid.4autocolumn 
        each val in ['annual glory', 'fortification (DV)']
          h2(data-i18n=val)
          +textInput(`${val}`)
    .col
      h2.text-uppercase(data-i18n='hate (landlord)')
      +numberInput(`hate landlord`)
  each val in ['manor description', 'manor summary']
    .grid.2autocolumn
      h3(data-i18n=val)
      +textInput(`${val}`)
  .row.mt
    h2(data-i18n='manor improvements')
  .repeating-container
    fieldset(class=`repeating_land-record`)
      .grid.first-row
        each val in ['date', 'feature', 'building cost', 'hate (landlord)']
          h3(data-i18n=val)
          +textInput(val)
      .grid.3column
        each val in ['annual income', 'annual maintenance', 'annual glory']
          .grid.2autocolumn
            h3(data-i18n=val)
            +textInput(val)
      .grid.2autocolumn
          h3(data-i18n='notes')
          +textInput('notes')





    