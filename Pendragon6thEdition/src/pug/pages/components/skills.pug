.grid.skills
    .header
        h1(data-i18n='skills')
    .grid.body.2column
        each val in skills
            .row.col-3(class=`${val} ${classNotation}`)
                +checkboxInput(`${val} check`)
                +rollButton(val)
                +numberInput(val)
        .row.header
            h2(data-i18n="combat skills")
        each val in ['battle', 'bow', 'brawling', 'charge', 'crossbow', 'halfed', 'two-handed hafted', 'horsemanship', 'spear', 'sword', 'thrown weapon']
            .row.col-3
                +checkboxInput(`${val} check`)
                +rollButton(val)
                +numberInput(val)
    .row.header
        h2(data-i18n="other")
    .repeating-container
        fieldset(class='repeating_skills')
            .row
                +checkboxInput(`check`)
                +textInput('name')
                +numberInput('skill')
                +repeatingRollButton('skill')